{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "@banco-de-dados/*": [
        "./src/database/*"
      ],
      "@configuracoes/*": [
        "./src/config/*"
      ],
      "@erros/*": [
        "./src/exceptions/*"
      ],
      "@modulos/*": [
        "./src/modules/*"
      ]
    },
    "removeComments": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": [
    ".vscode",
    "dist",
    "node_modules"
  ]
}