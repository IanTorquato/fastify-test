{
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "@typescript-eslint/indent": [
      "error",
      2
    ],
    "@typescript-eslint/no-explicit-any": "off",
    "class-methods-use-this": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "no-console": "off",
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "extensions": [
          ".ts"
        ],
        "map": [
          [
            "@banco-de-dados",
            "./src/database"
          ],
          [
            "@configuracoes",
            "./src/config"
          ],
          [
            "@erros",
            "./src/exceptions"
          ],
          [
            "@modulos",
            "./src/modules"
          ]
        ]
      }
    }
  }
}